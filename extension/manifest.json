{
  "name": "Mango Markets Watch",
  "version": "0.0.1",
  "description": "See current Mango Markets borrow/lend rates and set health alerts for your Mango Markets accounts",
  "permissions": [
    "storage",
    "alarms"
  ],
  "manifest_version": 2,
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Shift+Alt+M"
      }
    }
  },
  "browser_action": {
    "default_popup": "./dist/popup.html",
    "default_title": "Mango Markets Watch",
    "default_icon":"./dist/icons/logo.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": ["dist/background.dist.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "dist/options.html",
    "open_in_tab": false
  }
}
